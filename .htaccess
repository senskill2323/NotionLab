# --- Vite/React SPA on Apache ---
<IfModule mod_rewrite.c>
  RewriteEngine On
  # Laisse passer les fichiers/dossiers existants (CSS/JS/images)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  # Tout le reste -> index.html (routing SPA)
  RewriteRule ^ index.html [L]
</IfModule>

# Types explicites (certains mutualisés en ont besoin)
AddType application/javascript .js .mjs
AddType text/css .css

# Désactive le cache pendant debug
<IfModule mod_headers.c>
  Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
</IfModule>
